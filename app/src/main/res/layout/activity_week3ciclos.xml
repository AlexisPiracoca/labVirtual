<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lampara"
    tools:context=".classProgramming.introduccion.week3ciclos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/home1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/buttonback"
                android:background="#52262627"
                app:tint="@color/white"/>


            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#52262627"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="27dp"
                android:text="               ciclos" />


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">







                <TextView
                    android:id="@+id/variables"
                    android:layout_width="match_parent"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_height="wrap_content"
                    android:text="\nDefinición:"
                    android:background="#52262627"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />




                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Los ciclos te permiten hacer que tu programa repita una tarea varias veces. Puedes usar un ciclo para ejecutar el mismo código una y otra vez hasta que se cumpla una condición específica.\n \nEjemplo de Código:"
                    android:background="#52262627"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/codeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/codigo_ciclos"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:scrollbars="vertical"
                        android:gravity="start" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="En este ejemplo, utilizamos un ciclo for para imprimir los números del 1 al 5.\n- Declaramos una variable llamada i e inicializamos su valor en 1.\n- El ciclo se ejecuta mientras i sea menor o igual a 5.\n- En cada iteración del ciclo, imprimimos el valor de i y luego incrementamos i en 1.\nEn la consola nos saldra los numero del 1-5 asi:\n1\n2\n3\n4\n5"
                    android:background="#52262627"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="233dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/gatito" />

                <TextView
                    android:id="@+id/actividad1"
                    android:layout_width="match_parent"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_height="wrap_content"
                    android:text="¿Que aprendí?"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <TextView
                    android:id="@+id/textoActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Escoge la respuesta CORRECTA\n\nEl siguiente codigo imprime el rango de numeros:"
                    android:background="#52262627"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/codigoactividad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/black"
                        android:fontFamily="monospace"
                        android:gravity="start"
                        android:padding="16dp"
                        android:scrollbars="vertical"
                        android:text="@string/ejercicio_ciclos"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/opcion1ciclo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/blue"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="1-5" />


                    <Button
                        android:id="@+id/opcion2ciclo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/blue"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="1-7" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/opcion3ciclo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/blue"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="4-7" />


                    <Button
                        android:id="@+id/opcion4ciclo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:backgroundTint="@color/blue"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:text="4-5" />


                </LinearLayout>

                <Button
                    android:id="@+id/siguienteciclos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/blue"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:text="Siguiente" />



            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>